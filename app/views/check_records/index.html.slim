- breadcrumb :check_records
.container-fluid
  .animated.fadeIn
    .row
      .col-lg-12
        .card
          .card-header = t('.title')
          .card-body
            #checkrecords data-page="#{@page}"
              table.table.table-striped.table-condensed
                thead
                  tr
                    td 姓名
                    td 時間
                    th 類型
                    td 狀態
                tbody
                  - @checkrecords.each do |checkrecord|
                    tr
                      td = checkrecord.user
                      td = checkrecord.created_at
                      td = checkrecord.user.job_type
                      td = checkrecord.behavior
            = paginate @checkrecords
